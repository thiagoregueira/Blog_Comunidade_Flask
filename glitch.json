{
    "start": "./start.sh",
    "install": "./install.sh",
    "watch": {
        "install": {
            "include": [
                "^package\\.json$",
                "^\\.env$",
                "\\.force_install"
            ]
        },
        "restart": {
            "exclude": [
                "^public/",
                "^dist/",
                "^static/"
            ],
            "include": [
                "\\.js$",
                "\\.php$",
                "\\.json",
                "\\.ts",
                "\\.py",
                "\\.sh",
                "\\.cpp",
                "\\.cs",
                "\\.h"
            ]
        },
        "throttle": 2500
    }
}